<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>@ViewData["Title"] - rent.ukraine</title>
</head>
<body>
    <style>
        body {
            font-family: sans-serif;
        }

        .button .label {
            font-family: sans-serif;
            font-weight: 600;
            color: #2acdc1;
            font-size: 1.2em;
            line-height: 110%;
            /*letter-spacing: 2px;*/
            text-align: center;
            text-transform: uppercase;
            -webkit-transition: all .15s ease-out;
            -moz-transition: all .15s ease-out;
            -o-transition: all .15s ease-out;
            transition: all .15s ease-out;
            margin-right: 1em;
        }

        .button:hover .label {
            color: #ffffff;
        }
    </style>
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="padding-left:10%;padding-right:10%;font-size:1.1em;height:8%; background-image:url('https://pbs.twimg.com/media/EuitFHYXIAIJm2_?format=jpg&name=large'); background-size:cover">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <img style="height:3.5em;margin-right:2em" src="~/images/rent-logo3.png" />
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText" style="position:center">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="button nav-link" asp-controller="Product" asp-action="MainThings" asp-route-category="">
                        <div class="label">
                            Прокат речей
                        </div>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="button nav-link" asp-controller="Product" asp-action="MainRealEstate">
                        <div class="label">
                            Оренда нерухомості
                        </div>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="button nav-link" asp-controller="Product" asp-action="MainCars">
                        <div class="label">
                            Оренда транспорту
                        </div>
                    </a>
                </li>
            </ul>
            @*<a asp-controller="Product" asp-action="AddProduct">
                    <button style="font-size:1em;margin:10px;color:#3e2622;border-color:#3e2622" id="addbtn" class="btn btn-outline-success my-2 my-sm-0">+ Подати оголошення</button>
                </a>*@
            <div class="dropdown">
                <div class="button" style="display:flex;">
                    @if (User.IsInRole("User"))
                    {
                        <label class="label">@User.Identity.Name</label>
                    }
                    else
                    {
                        <div class="label" style="font-size:2em;font-weight: 100;">≡</div>
                    }
                </div>
                <div class="dropdown-content" style="font-weight:600; text-transform:uppercase;border: 0.2em solid #04049d" id="accountdropdown">
                    @if (User.IsInRole("User"))
                    {
                        <a class="nav-link" asp-controller="Account" asp-action="PersonalPage" style="color:#2acdc1">Моя сторінка</a>
                        <a class="nav-link" asp-controller="Product" asp-action="AddProduct" style="color:#2acdc1">Нове оголошення</a>
                        <a class="nav-link" asp-controller="Account" asp-action="" style="color:#2acdc1">Обране</a>
                        <form method="post" asp-controller="Account" asp-action="Logout">
                            <input class="nav-link" type="submit" value="Вихід" style="color:#2acdc1 !important;font-weight:600 !important; text-transform:uppercase !important; border:none !important; background:none !important" />
                        </form>
                    }
                    else
                    {
                        <a class="nav-link" asp-controller="Account" asp-action="Login" style="color:#2acdc1">Вхід</a>
                        <a class="nav-link" asp-controller="Account" asp-action="Register" style="color:#2acdc1">Реєстрація</a>
                    }
                </div>
            </div>
        </div>
    </nav>

    @*<partial name="_CookieConsentPartial" />*@

    <div class="d-flex justify-content-between">

        @if (ViewData["Title"].ToString() == "MainCars" || ViewData["Title"].ToString() == "MainRealEstate" || ViewData["Title"].ToString() == "MainThings")
        {
            @await Component.InvokeAsync("Category");
        }

        <div class="container" style="margin-left:7%;margin-right:7%;max-width:9999px">
            <main role="main" style="width:100%">
                @RenderBody()
            </main>
        </div>
    </div>

    <div style="width:100%;position:absolute">
        <footer class="page-footer bg-light" style="padding:2em;height:8em;background-image:url('https://pbs.twimg.com/media/EuitFHYXIAIJm2_?format=jpg&name=large')">
            <div style="display:flex; flex-direction:row; justify-content:center; align-items:center;">
                <label style="font-size:2em; color:#2acdc1; font-weight:600; font-family: sans-serif;">RENT.UKRAINE |</label>
                <label style="font-size:1.3em; color:#2acdc1; margin-left:0.5em; font-weight:600; font-family: sans-serif;">Powered by Andrew Alforov</label>
            </div>
            <div style="display:flex; flex-direction:row; justify-content:space-between; align-items:center;">
                <label style="color: #D0C7BE">Privacy Policy | Terms of Use</label>
                <label style="color: #D0C7BE">© 2021-2022 rentukraine.com</label>
            </div>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
