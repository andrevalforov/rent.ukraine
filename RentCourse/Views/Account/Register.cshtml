@model RentCourse.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Registration";
}
@{
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>@ViewData["Title"] - rent.ukraine</title>
</head>
<style>
    .regform {
        height: 80%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        vertical-align: central;
    }
</style>
<body style="background-image:url(https://stellationmedia.com/wp-content/uploads/2016/06/White-Geometric-Background-White-Geometric-Background-01.png)">

    <a asp-controller="Home" asp-action="Index">
        <button style="border-radius:25px;height:50px;width:50px; border-color:#3e2622;border-width:1px;background:none;margin-top:10px;margin-left:10px;">
            <img src="~/images/Streamline-18-512.png" style="height:30px;width:30px" />
        </button>
    </a>
    <form method="post" asp-controller="Account" asp-action="Register" class="regform">
        <table>
            <tr>
                <td style="padding-right:20px;min-width:50%">
                    <div style="display:flex;justify-content:center">
                        <h2>Реєстрація нового користувача</h2>
                    </div>
                    <div asp-validation-summary="ModelOnly"></div>
                    <div>
                        <label asp-for="LastName"></label><br />
                        <input type="text" class="form-control" asp-for="LastName" />
                        <span asp-validation-for="LastName"></span>
                    </div>
                    <div>
                        <label asp-for="FirstName"></label><br />
                        <input type="text" class="form-control" asp-for="FirstName" />
                        <span asp-validation-for="FirstName"></span>
                    </div>
                    <div>
                        <label asp-for="MiddleName"></label><br />
                        <input type="text" class="form-control" asp-for="MiddleName" />
                        <span asp-validation-for="MiddleName"></span>
                    </div>
                    <div>
                        <label asp-for="Email"></label><br />
                        <input type="email" class="form-control" asp-for="Email" />
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div>
                        <label asp-for="PhoneNumber"></label><br />
                        <input type="tel" class="form-control" asp-for="PhoneNumber" />
                        <span asp-validation-for="PhoneNumber"></span>
                    </div>
                    <div>
                        <label asp-for="Password"></label><br />
                        <input type="password" class="form-control" asp-for="Password" />
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div>
                        <label asp-for="PasswordConfirm"></label><br />
                        <input type="password" class="form-control" asp-for="PasswordConfirm" />
                        <span asp-validation-for="PasswordConfirm"></span>
                    </div>
                    <div>
                        <input style="margin:5px;font-size:21px" type="submit" class="btn btn-outline-dark" value="Зареєструватися" />
                    </div>
                </td>
                <td style="border-left:1px solid #3e2622">
                    <img src="~/images/logotype.png" height="200" />
                </td>
            </tr>
        </table>
    </form>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
</body>