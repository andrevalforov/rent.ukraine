@model RentCourse.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Registration";
}
@{
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <title>@ViewData["Title"] - rent.ukraine</title>
</head>
<style>
    .regform {
        /*height: 80%;*/
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        vertical-align: central;
    }

    h2, label {
        font-family: sans-serif;
        font-weight: 600;
        color: #04049d;
        text-transform: uppercase;
        line-height: 110%;
        letter-spacing: 2px;
    }

    .form-control {
        border: 0.2em solid #04049d !important;
        border-radius: 0 !important;
        color: #04049d !important;
        font-size: 1em !important;
        font-family: sans-serif !important;
        height: 3em;
    }

    .btn-outline-dark:hover {
        background: #04049d !important;
        color: #ffffff !important;
    }

    td div {
        margin-bottom: 1em;
    }

    .form-check-label{
        letter-spacing:0;
        text-transform:none;
        font-weight:300;
    }

    .accbtn {
        font-size: 1em;
        font-family: sans-serif;
        font-weight: 600;
        line-height: 110%;
        text-transform: uppercase;
        color: #04049d;
        margin-bottom: 1em;
    }
</style>
<body style="background-image:url(https://pbs.twimg.com/media/EuxyjDgXIAEo4Ke?format=jpg&name=large)">

    <a asp-controller="Home" asp-action="Index">
        <button style="border-radius:25px;height:50px;width:50px; border-color:#04049d;border-width:1px;background:none;margin-top:10px;margin-left:10px;">
            <img src="~/images/home-button.png" style="height:30px;width:30px" />
        </button>
    </a>
    <form method="post" asp-controller="Account" asp-action="Register" class="regform">
        <table style="margin-left:7%;margin-right:7%">
            <tr>
                <td style="width:50%">
                    <div style="display:flex;flex-direction: column;justify-content: center;align-items: center;padding: 5em">
                        <div style="display:flex;justify-content:center;margin-bottom:0">
                            <label style="color:#2acdc1; font-size:3em; text-align:center">Реєстрація</label>
                        </div>
                        <div style="width:100%;display:flex;justify-content:center;flex-direction:column">
                            <div asp-validation-summary="ModelOnly"></div>
                            <div>
                                <label asp-for="LastName"></label><br />
                                <input type="text" class="form-control" asp-for="LastName" />
                                <span asp-validation-for="LastName" />
                            </div>
                            <div>
                                <label asp-for="FirstName"></label><br />
                                <input type="text" class="form-control" asp-for="FirstName" />
                                <span asp-validation-for="FirstName" />
                            </div>
                            <div>
                                <label asp-for="MiddleName"></label><br />
                                <input type="text" class="form-control" asp-for="MiddleName" />
                                <span asp-validation-for="MiddleName" />
                            </div>
                            <div style="display:flex;justify-content:space-between;margin-bottom:0">
                                <div style="width:45%">
                                    <label asp-for="Email"></label><br />
                                    <input type="email" class="form-control" asp-for="Email" />
                                    <span asp-validation-for="Email" />
                                </div>
                                <div style="width:45%">
                                    <label asp-for="PhoneNumber"></label><br />
                                    <div style="display:flex; justify-content:flex-start">
                                        <input type="tel" class="form-control" asp-for="PhoneNumber" />
                                        <img src="~/images/3dots.png" style="height:3em;width:3em" data-toggle="tooltip" title="Месенджери" data-bs-toggle="modal" data-bs-target="#phoneModal" onmouseover="this.src = '/images/3dots-highlighted.png'" onmouseout="this.src = '/images/3dots.png'" onclick="" />
                                        <div class="modal fade" id="phoneModal" tabindex="-1" aria-labelledby="phoneModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Месенджери</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="form-check form-switch">
                                                            <input asp-for="Viber" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                                                            <label class="form-check-label" for="flexSwitchCheckDefault">Цей номер зареєстровано у Viber</label>
                                                        </div>
                                                        <div class="form-check form-switch">
                                                            <input asp-for="WhatsApp" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                                                            <label class="form-check-label" for="flexSwitchCheckDefault">Цей номер зареєстровано у WhatsApp</label>
                                                        </div>
                                                        <div class="form-check form-switch">
                                                            <input asp-for="Telegram" class="form-check-input" type="checkbox" id="tgcheck" onclick="if (document.getElementById('tgcheck').checked == true) { document.getElementById('tgname').disabled = false } else { document.getElementById('tgname').disabled = true }">
                                                            <label class="form-check-label" for="flexSwitchCheckDefault">Цей номер зареєстровано у Telegram (або введіть ім'я користувача нижче)</label>
                                                        </div>
                                                        <input asp-for="TgUsername" id="tgname" type="text" style="margin:1em;" disabled />
                                                        <span asp-validation-for="TgUsername" />
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">OK</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <span asp-validation-for="PhoneNumber" />
                                </div>
                            </div>
                            <div style="display:flex;justify-content:space-between">
                                <div style="width:45%">
                                    <label asp-for="Password"></label><br />
                                    <input type="password" class="form-control" asp-for="Password" />
                                    <span asp-validation-for="Password" />
                                </div>
                                <div style="width:45%">
                                    <label asp-for="PasswordConfirm"></label><br />
                                    <input type="password" class="form-control" asp-for="PasswordConfirm" />
                                    <span asp-validation-for="PasswordConfirm" />
                                </div>
                            </div>
                            <div style="display:flex;justify-content:center">
                                <input style="font-size:1em;font-family:sans-serif;font-weight:600;margin-top:1em !important;color:#04049d;border: 0.2em solid #04049d !important;border-radius: 0 !important;min-width:25%" type="submit" class="btn btn-outline-dark" value="ЗАРЕЄСТРУВАТИСЯ" />
                            </div>
                        </div>
                        <a class="accbtn" asp-action="Login" asp-controller="Account">Вже зареєстровані?</a>
                    </div>
                </td>
                <td style="border-left:0.3em solid #04049d; display:flex;justify-content:center;padding:2em">
                    <img src="~/images/rent-logo3.png" style="width:100%" />
                </td>
            </tr>
        </table>
    </form>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>