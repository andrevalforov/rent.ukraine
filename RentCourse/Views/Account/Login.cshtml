@model RentCourse.ViewModels.LoginViewModel

<h2>Вхід в обліковий запис</h2>


<form method="post" asp-action="Login" asp-controller="Account" asp-anti-forgery="true" style="margin-left:100px;margin-right:100px">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div>
            <label asp-for="Email">Email</label>
            <input type="text" class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="Password">Пароль</label>
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input style="margin:5px;font-size:21px" type="submit" value="Увійти" class="btn btn-primary" />
        </div>
    </div>
<a asp-action="RestorePassword" asp-controller="Account">Забули пароль?</a>
<a asp-action="Register" asp-controller="Account">Немає облікового запису?</a>
</form>

