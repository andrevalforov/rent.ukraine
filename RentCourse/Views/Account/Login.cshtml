@model RentCourse.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
@{
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>@ViewData["Title"] - rent.ukraine</title>
</head>
<style>
    .loginform {
        height: 80%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        vertical-align: central;
    }
    h2, label {
        font-family: sans-serif;
        font-weight: 600;
        color: #04049d;
        text-transform: uppercase;
    }
    input{
        border-width:2px !important;
        border-color:#04049d !important;
        color:#04049d !important;
    }
    .btn-outline-dark:hover{
        background:#04049d !important;
        color:#ffffff !important;
    }
</style>
<body style="background-image:url(https://pbs.twimg.com/media/EuxyjDgXIAEo4Ke?format=jpg&name=large)">

    <a asp-controller="Home" asp-action="Index">
        <button style="border-radius:25px;height:50px;width:50px; border-color:#04049d;border-width:1px;background:none;margin-top:10px;margin-left:10px;">
            <img src="~/images/home-button.png" style="height:30px;width:30px" />
        </button>
    </a>
    <form method="post" asp-action="Login" asp-controller="Account" class="loginform" asp-anti-forgery="true">
        <table>
            <tr>
                <td style="padding-right:20px;min-width:50%">
                    <h2 style="color:#2acdc1">Вхід в обліковий запис</h2>
                    <div class="validation" asp-validation-summary="ModelOnly" />
                    <div>
                        <div style="margin-bottom:1em">
                            <label asp-for="Email">Email</label>
                            <input type="text" class="form-control" asp-for="Email" />
                            <span asp-validation-for="Email" />
                        </div>
                        <div style="margin-bottom:1em">
                            <label asp-for="Password">Пароль</label>
                            <input class="form-control" type="password" asp-for="Password" />
                            <span asp-validation-for="Password" />
                        </div>
                        <div class="form-group">
                            <input style="margin:5px;font-size:21px" type="submit" value="Увійти" class="btn btn-outline-dark" />
                        </div>
                    </div>
                    <a style="color:#04049d" asp-action="RestorePassword" asp-controller="Account">Забули пароль?</a>
                    <a style="color:#04049d" asp-action="Register" asp-controller="Account">Немає облікового запису?</a>
                </td>
                <td style="border-left:1px solid #04049d">
                    <img src="~/images/rent-logo3.png" style="height:20em; margin-left:2em" />
                </td>
            </tr>
        </table>
    </form>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
</body>