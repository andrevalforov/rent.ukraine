@model RentCourse.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Login";
}
@{
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>@ViewData["Title"] - rent.ukraine</title>
</head>
<style>
    .loginform {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        vertical-align: central;
    }

    h2, label {
        font-family: sans-serif;
        font-weight: 600;
        color: #04049d;
        text-transform: uppercase;
        line-height: 110%;
        letter-spacing: 2px;
    }

    input {
        border-width: 2px !important;
        border-color: #04049d !important;
        color: #04049d !important;
    }

    .btn-outline-dark:hover {
        background: #04049d !important;
        color: #ffffff !important;
    }

    .form-control {
        border: 0.2em solid #04049d !important;
        border-radius: 0 !important;
        color: #04049d !important;
        font-size: 1em !important;
        font-family: sans-serif !important;
        height: 3em;
    }
</style>
<body style="background-image:url(https://pbs.twimg.com/media/EuxyjDgXIAEo4Ke?format=jpg&name=large)">

    <a asp-controller="Home" asp-action="Index">
        <button style="border-radius:25px;height:50px;width:50px; border-color:#3e2622;border-width:1px;background:none;margin-top:10px;margin-left:10px;">
            <img src="~/images/home-button.png" style="height:30px;width:30px" />
        </button>
    </a>
    <form asp-action="ChangePassword" asp-controller="Account" asp-anti-forgery="true" class="loginform">
        <table style="margin-left:7%;margin-right:7%">
            <tr>
                <td style="width:50%">
                    <div style="display:flex;flex-direction: column;justify-content: center;align-items: center;padding: 5em">
                        <label style="color:#2acdc1; font-size:3em; text-align:center">Зміна паролю</label>
                        <div class="validation" asp-validation-summary="ModelOnly"></div>
                        <div style="width:100%;display:flex;justify-content:center;flex-direction:column">
                            <div class="form-group">
                                <label asp-for="OldPassword"></label>
                                <input type="password" class="form-control" asp-for="OldPassword" />
                                <span asp-validation-for="OldPassword" />
                            </div>
                            <div class="form-group">
                                <label asp-for="NewPassword"></label>
                                <input type="password" class="form-control" asp-for="NewPassword" />
                                <span asp-validation-for="NewPassword" />
                            </div>
                            <div class="form-group">
                                <label asp-for="NewPasswordConfirm"></label>
                                <input type="password" class="form-control" asp-for="NewPasswordConfirm" />
                                <span asp-validation-for="NewPasswordConfirm" />
                            </div>
                            <div class="form-group" style="display:flex;justify-content:center">
                                <input style="font-size:1em;font-family:sans-serif;font-weight:600;margin-top:1em !important;color:#04049d;border: 0.2em solid #04049d !important;border-radius: 0 !important;min-width:25%" type="submit" value="ПІДТВЕРДИТИ" class="btn btn-outline-dark" />
                            </div>
                        </div>
                    </div>
                </td>
                <td style="border-left:0.3em solid #04049d; display:flex;justify-content:center;padding:2em">
                    <img src="~/images/rent-logo3.png" style="width:100%" />
                </td>
            </tr>
        </table>
    </form>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>